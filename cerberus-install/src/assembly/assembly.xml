<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>install</id>
	<formats>
		<format>zip</format>
		<format>tar</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/src/bin</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.jar</include>
				<include>*.war</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/license</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*LICENSE*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/scripts</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.sh</include>
				<include>*.bat</include>
				<include>*.sql</include>
				<include>h2</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/doc</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*RELEASE-NOTES*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/doc/instructions</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.howto</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/doc/instructions/database/h2</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.howto</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../cerberus-ear/target</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.ear</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>